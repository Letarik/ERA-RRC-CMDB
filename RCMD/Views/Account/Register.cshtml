@using RCMD.Models
@model RegisterViewModel

<link href="@Url.Content("~/Content/bootstrap.min.modal.css")" rel="stylesheet">
<script src="@Url.Content("~/Scripts/jquery.min.modal.js")"></script>
<script src="@Url.Content("~/Scripts/bootstrap.min.modal.js")"></script>
<link href="@Url.Content("~/Content/modal.min.css")" rel="stylesheet">
<div id="main-section-header" class="row">
    <h2 id="team-efficiency" class="col-xs-3">Ethiopian Road Research Center Road Constriction Material Database</h2>
</div>
<div class="container-narrow">
    <div class="modal fade" id="MyLoginModal" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                   <div class="imgcontainer">
                            <span class="close" title="Close Modal" data-dismiss="modal">&times;</span>
                            <h4 class="modal-title" align="center">RCMDB</h4>
                   </div>                
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-8">
                            <section id="RegisterForm">
                                @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                                {
                                    @Html.AntiForgeryToken()
                                    <h4 align="center" style="margin-left:150px">Create An Account</h4>
                                    <hr style="margin-right:0px; margin-left:0px" />
                                    @Html.ValidationSummary("", new { @class = "text-danger" })
                                    <div class="form-group">
                                       <div class="col-md-10" style="margin-left:100px">
                                            <p>
                                                @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control", placeholder = "Given Name", tabindex = 1 })
                                                @Html.ValidationMessageFor(m => m.FirstName, "", new { @class = "text-danger" })
                                            </p>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="col-md-10" style="margin-left:100px">
                                            <p>
                                                @Html.TextBoxFor(m => m.LastName, new { @class = "form-control", placeholder = "Last Name", tabindex = 1 })
                                                @Html.ValidationMessageFor(m => m.LastName, "", new { @class = "text-danger" })
                                            </p>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="col-md-10" style="margin-left:100px">
                                            <p>
                                                @Html.TextBoxFor(m => m.Position, new { @class = "form-control", placeholder = "Title/Position", tabindex = 1 })
                                                @Html.ValidationMessageFor(m => m.Position, "", new { @class = "text-danger" })
                                            </p>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="col-md-10" style="margin-left:100px">
                                            <p>
                                                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Email", tabindex = 1 })
                                                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                                            </p>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="col-md-10" style="margin-left:100px">
                                            <p>
                                                @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Password", tabindex = 1 })
                                                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                                            </p>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="col-md-10" style="margin-left:100px">
                                            <p>
                                                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", placeholder = "Confirm Password", tabindex = 1 })
                                                @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
                                            </p>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="col-md-10" style="margin-left:100px">
                                            <p>
                                                @Html.DropDownList("UserRoles", (SelectList)ViewBag.Name, new { @class = "form-control", placeholder = "User Roles", tabindex = 1 })                                            
                                            </p>
                                        </div>
                                    </div>
                                    <div class="modal-footer">
                                       
                                        <p><input type="submit" class="btn btn-small btn-primary" value="Register" style="width:150px; height:35px;" /></p>
                                       
                                       
                                    </div>
                                                                    
                                }
                            </section>
                        </div>
                    </div>
                 </div>
                
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        $("#MyLoginModal").modal('show');

    });
</script>